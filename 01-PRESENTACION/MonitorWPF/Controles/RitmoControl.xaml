<UserControl x:Class="MonitorWPF.Controles.RitmoControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MonitorWPF.Controles"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border Background="Black" CornerRadius="10">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" Direction="-90" RenderingBias="Quality" Opacity=".2" ShadowDepth="1"/>
            </Border.Effect>
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="{Binding RitmoHora,Mode=OneWay}" HorizontalAlignment="Center" FontSize="30" FontWeight="Bold" Foreground="White"></TextBlock>
                <TextBlock Text="RITMO" FontSize="30" Foreground="White"></TextBlock>
            </StackPanel>
        </Border>

    </Grid>
</UserControl>
