<Page x:Class="MonitorWPF.Paginas.PegadoPaginaModulo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MonitorWPF.Paginas"
      xmlns:ctrl="clr-namespace:MonitorWPF.Controles"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PegadoPaginaModulo">

    <Grid Background="Gray">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Name="GridMaquinas">
            
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <ctrl:RitmoControl x:Name="RitmoControl" Margin="1" Grid.Column="0"></ctrl:RitmoControl>
            <ctrl:PrimaTiempoRealControl Margin="1" Grid.Column="1"></ctrl:PrimaTiempoRealControl>
            <ctrl:BotonLogoutControl x:Name="BtLogout"  Margin="1" Grid.Column="2"></ctrl:BotonLogoutControl>
        </Grid>
        
        
    </Grid>
</Page>
